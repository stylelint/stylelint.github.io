{
  "name": "stylelintio",
  "version": "0.0.0",
  "description": "Stylelint website",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/stylelint/stylelint.github.io.git"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "cssnext": "^1.8.4",
    "eslint": "^1.3.1",
    "eslint-config-stylelint": "^0.1.0",
    "glob": "^5.0.14",
    "postcss": "^5.0.4",
    "postcss-reporter": "^1.1.0",
    "stylelint": "^1.0.0",
    "stylelint-config-suitcss": "^0.4.0"
  },
  "scripts": {
    "_lint-css": "babel-node scripts/lint-css",
    "build-css": "cssnext src/index.css dist/index.css",
    "lint": "npm run lint-js && npm run lint-css",
    "lint-css": "npm run _lint-css --stylelintio:src=src/**/*.css",
    "lint-js": "eslint . --ignore-path .gitignore"
  }
}
