{
  "name": "stylelintio",
  "version": "0.0.0",
  "description": "Stylelint website",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/stylelint/stylelint.github.io.git"
  },
  "devDependencies": {
    "babel": "^5.6.7",
    "babel-eslint": "^3.1.18",
    "cssnext": "^1.7.1",
    "eslint": "^0.23.0",
    "glob": "^5.0.10",
    "postcss": "^4.1.13",
    "postcss-reporter": "^0.1.0",
    "stylelint": "stylelint/stylelint",
    "stylelint-config-suitcss": "stylelint/stylelint-config-suitcss"
  },
  "scripts": {
    "_lint-css": "babel-node scripts/lint-css",
    "build-css": "cssnext src/index.css dist/index.css",
    "lint": "npm run lint-js && npm run lint-css",
    "lint-css": "npm run _lint-css --stylelintio:src=src/**/*.css",
    "lint-js": "eslint . --ignore-path .gitignore",
    "postinstall": "cd node_modules/stylelint && npm i && cd ../.. && cd node_modules/stylelint-config-suitcss && npm i && cd ../.."
  }
}
